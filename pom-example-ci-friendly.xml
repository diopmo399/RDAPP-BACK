<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>my-project</artifactId>
    <!--
        CI-Friendly Version:
        - Utilise ${revision} pour définir la version dynamiquement
        - Par défaut: 1.0.0-SNAPSHOT
        - CI: mvn -Drevision=1.0.0-ci-123-abc1234-SNAPSHOT
        - Release: mvn -Drevision=1.0.0
    -->
    <version>${revision}</version>
    <packaging>jar</packaging>

    <name>My Project</name>
    <description>Example project with CI-friendly versioning</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>

        <!--
            CI-Friendly Versioning Properties
            See: https://maven.apache.org/maven-ci-friendly.html
        -->
        <revision>1.0.0-SNAPSHOT</revision>
        <changelist></changelist>
        <sha1></sha1>

        <!-- Versions des plugins -->
        <flatten.maven.plugin.version>1.5.0</flatten.maven.plugin.version>
        <maven.deploy.plugin.version>3.1.1</maven.deploy.plugin.version>
    </properties>

    <dependencies>
        <!-- Vos dépendances ici -->
    </dependencies>

    <build>
        <plugins>
            <!--
                Flatten Maven Plugin:
                Résout les propriétés ${revision}, ${changelist}, ${sha1}
                avant de publier le POM vers le repository Maven.

                Cela garantit que le POM publié contient "1.0.0" au lieu de "${revision}".
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>${flatten.maven.plugin.version}</version>
                <configuration>
                    <!--
                        Mode: resolveCiFriendliesOnly
                        - Résout uniquement ${revision}, ${changelist}, ${sha1}
                        - Conserve les autres propriétés (dependencies, etc.)
                        - Produit un POM "clean" pour la publication
                    -->
                    <flattenMode>resolveCiFriendliesOnly</flattenMode>
                    <updatePomFile>true</updatePomFile>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                </configuration>
                <executions>
                    <!-- Flatten avant le package -->
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <!-- Clean après -->
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--
                Maven Deploy Plugin:
                Publie les artifacts vers le repository Maven
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${maven.deploy.plugin.version}</version>
            </plugin>

            <!-- Autres plugins -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.12.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.3</version>
            </plugin>
        </plugins>
    </build>

    <!--
        Distribution Management:
        Configurez votre repository Maven (Nexus, Artifactory, GitHub Packages)
    -->
    <distributionManagement>
        <!-- Repository pour les releases -->
        <repository>
            <id>ossrh</id>
            <name>Maven Central Staging</name>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>

        <!-- Repository pour les snapshots -->
        <snapshotRepository>
            <id>ossrh</id>
            <name>Maven Central Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </snapshotRepository>

        <!-- Ou GitHub Packages -->
        <!--
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/OWNER/REPO</url>
        </repository>
        -->
    </distributionManagement>

    <profiles>
        <!--
            Profile Release:
            Actif lors de la release pour signer les artifacts, générer sources/javadoc
        -->
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <!-- Maven Source Plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>3.3.0</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Maven Javadoc Plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>3.6.3</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Maven GPG Plugin (pour signer les artifacts) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                                <configuration>
                                    <!-- Pour GitHub Actions avec GPG key en secret -->
                                    <gpgArguments>
                                        <arg>--pinentry-mode</arg>
                                        <arg>loopback</arg>
                                    </gpgArguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
